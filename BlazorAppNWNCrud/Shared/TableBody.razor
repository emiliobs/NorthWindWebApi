@inject NavigationManager navigation
<tbody>
    @if (Products.Count == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                <h3><em>There is no Products.....</em></h3>
            </td>
        </tr>

    }
    else
    {
        @foreach (var product in Products)
        {
<tr>
    <td>@product.Name</td>
    <td>@product.UnitPrice" <span class="oi oi-british-pound"></span></td>
    <td>@product.UnitsInStock</td>
    <td><a class="btn btn-info" title="Edit" href="/EditProduct/@product.Id"><span class="oi oi-pencil"></span></a></td>
    <td><a class="btn btn- bg-warning" title="Details" href="/DetailsProduct/@product.Id"><span class="oi oi-browser"></span></a></td>
    <td><a class="btn btn-danger" title="Delete" href="/DeleteProduct/@product.Id"><span class="oi oi-trash"></span></a></td>
</tr>
        }

    }
</tbody>

@code {

    [Parameter]
    public List<Product> Products { get; set; }

 

}
